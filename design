		EXCEPT_TABLES:[]

		Default:
			DEFAULT_ROWS	-- 默认请求返回数据条数
			MAX_ROWS	-- 单次请求最大数据条数

			SELECT_COLUMNS:[]	-- 返回的字段（空，则返回所有字段）
			EXCEPT_COLUMNS:[]	-- 去掉的字段（从SELECT_COLUMNS里面删除掉）

		DB.Table:
			DEFAULT_ROWS
			MAX_ROWS

			SELECT_COLUMNS:[]
			EXCEPT_COLUMNS:[]

		...

		-------------------------------





